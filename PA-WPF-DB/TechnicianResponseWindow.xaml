
    <Window x:Class="PA_WPF_DB.TechnicianResponseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Respond to Ticket" Height="250" Width="400" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Enter your response:" Margin="0,0,0,10"/>
            <TextBox Name="txtResponse" Height="100" AcceptsReturn="True" TextWrapping="Wrap"/>
            <Button Content="Submit" Width="100" HorizontalAlignment="Right" Margin="0,10,0,0" Click="Submit_Click"/>
        </StackPanel>
    </Grid>
</Window>